@model LogUser

<h2>Login</h2>
<form action="/login" method="post">
    
    <div class="form-group">
        <label asp-for="LoginEmail"></label>&nbsp&nbsp<span asp-validation-for="LoginEmail"></span>
        <input asp-for="LoginEmail" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LoginPassword"></label>&nbsp&nbsp<span asp-validation-for="LoginPassword"></span>
        <input asp-for="LoginPassword" class="form-control" />
    </div>
    <div class="form-group text-right">
        <button class="btn btn-primary">Login</button>
    </div>

</form>